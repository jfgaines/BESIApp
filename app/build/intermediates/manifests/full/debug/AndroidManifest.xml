            android:name="com.jutech.besi.DepressionChecklist"
            android:label="Mood Checklist"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.jutech.besi.PlayPen"
            android:label="@string/title_activity_play_pen"
            android:parentActivityName="com.jutech.besi.HomeScreen" >

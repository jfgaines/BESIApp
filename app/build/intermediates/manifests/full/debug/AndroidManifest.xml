            android:name="com.jutech.besi.Activities.Evening_Layout"
            android:label="@string/title_activity_evening__layout"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.jutech.besi.PWDSummary"
            android:label="@string/title_activity_pwdsummary"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.jutech.besi.UserReport"
            android:label="@string/title_activity_user_report"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.jutech.besi.CaregiverRegister"
            android:label="@string/register_screen"
            android:parentActivityName="com.jutech.besi.MainActivity"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jutech.besi.MainActivity" />
        </activity>
        <activity
            android:name="com.jutech.besi.AgitationChecklist"
            android:label="@string/title_activity_agitation_checklist"

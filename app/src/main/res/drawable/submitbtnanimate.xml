<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffa60f63" />
            <stroke
                android:width="1dp"
                android:color="#ffa60f63" />
            <corners
                android:radius="20dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffa60f63"
                android:endColor="#ffa60f63"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffa60f63" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>
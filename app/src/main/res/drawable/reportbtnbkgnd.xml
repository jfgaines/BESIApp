<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#BBDEFB" />
            <stroke
                android:width="1dp"
                android:color="#dc2d6ecd" />
            <corners
                android:radius="40dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#dc2d6ecd"
                android:endColor="#dc2d6ecd"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dc2d6ecd" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>
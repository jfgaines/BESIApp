<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jfgaines.besiapp.DepressionChecklist"
    android:id="@+id/DepressionLayout"
    android:background="#E1BEE7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please select what you observed."
            android:id="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout8"
                android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sad voice"
                    android:id="@+id/CheckVoice"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tearfulness"
                    android:id="@+id/CheckTearfulness"
                    android:checked="false"
                    android:layout_below="@+id/CheckWorried"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:text="Lack of reaction to pleasant events"
                    android:id="@+id/CheckPleasantReaction"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very worried"
                    android:id="@+id/CheckWorried"
                    android:checked="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frightened"
                    android:id="@+id/CheckFrightened"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout5"
                android:layout_alignTop="@+id/linearLayout8"
                android:layout_alignLeft="@+id/button6"
                android:layout_alignStart="@+id/button6"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="10dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talks less than usual"
                    android:id="@+id/CheckEnthusiasm"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loss of appetite"
                    android:id="@+id/CheckAppetitie"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loss of usual interest in hobbies"
                    android:id="@+id/CheckLostHobbies"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sad expression"
                    android:id="@+id/CheckExpression"
                    android:checked="false"
                    android:textSize="30dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lack of interest"
                    android:id="@+id/CheckInterest"
                    android:checked="false"
                    android:layout_column="28"
                    android:textSize="30dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trouble concentrating"
                    android:id="@+id/CheckConcentrating"
                    android:checked="false"
                    android:textSize="30dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout9"
                android:layout_alignTop="@+id/linearLayout5"
                android:layout_toRightOf="@+id/button6"
                android:layout_toEndOf="@+id/button6">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trouble paying attention"
                    android:id="@+id/CheckAttention"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bothered by usual activities"
                    android:id="@+id/CheckBothered"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:button="@drawable/customcheckbox"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow movement"
                    android:button="@drawable/customcheckbox"
                    android:id="@+id/CheckMovement"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow speech"
                    android:id="@+id/CheckSpeech"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:checked="false"
                    android:button="@drawable/customcheckbox"
                    android:layout_column="0"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow reaction"
                    android:id="@+id/CheckReaction"
                    android:button="@drawable/customcheckbox"
                    android:checked="false"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="Submit"
            android:id="@+id/button6"
            android:textSize="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/loginbtnanimate"
            android:layout_gravity="center_horizontal"
            android:onClick="SubmitonClick"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>

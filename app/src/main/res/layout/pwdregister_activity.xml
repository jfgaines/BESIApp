<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="#E1BEE7">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/CareTakerRegister"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="36dp"
            android:textColor="#ff000000"
            android:id="@+id/Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/FirstNameText"
                android:hint="First"
                android:background="@drawable/loginboxes"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/name"
                android:singleLine="true"
                android:inputType="textCapWords" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/LastNameText"
                android:hint="Last"
                android:background="@drawable/loginboxes"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/name"
                android:singleLine="true"
                android:inputType="textCapWords" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="36dp"
            android:textColor="#ff000000"
            android:id="@+id/Address" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Address"
            android:background="@drawable/loginboxes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="textPostalAddress" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textColor="#ff000000"
                android:id="@+id/textView30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="State"
                android:id="@+id/textView22"
                android:layout_alignBottom="@+id/textView23"
                android:layout_alignRight="@+id/linearLayout6"
                android:layout_alignEnd="@+id/linearLayout6"
                android:textSize="36dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:layout_marginLeft="275dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip"
                android:id="@+id/textView34"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true" >

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/editText3"
                android:hint=""
                android:background="@drawable/loginboxes"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:inputType="textCapWords" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/editText4"
                android:hint=""
                android:background="@drawable/loginboxes"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/editTextUserName"
                android:hint=""
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/loginboxes"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shimmer ID"
            android:textStyle="bold"
            android:textSize="36dp"
            android:textColor="#ff000000"
            android:id="@+id/wearableid" />

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:background="@drawable/loginboxes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:hint="Shimmer ID" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EmergencyContact"
            android:textStyle="bold"
            android:textSize="36dp"
            android:textColor="#ff000000"
            android:id="@+id/EmergencyContact" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ContactNumberText"
            android:hint="Emergency Number"
            android:background="@drawable/loginboxes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loved One"
        android:id="@+id/textView23"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_alignBottom="@+id/CareTakerRegister"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageView10"
            android:background="@drawable/pwd"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/CaregiverAccountCreateBtn"
            android:layout_alignStart="@+id/CaregiverAccountCreateBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loved One"
            android:id="@+id/textView29"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:textSize="36dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/CaregiverAccountCreateBtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Finish"
            android:background="@drawable/loginbtnanimate"
            android:textSize="36dp"
            android:onClick="CreateAccountonClick"
            android:layout_below="@+id/CareTakerRegister"
            android:layout_toRightOf="@+id/textView23"
            android:layout_toEndOf="@+id/textView23"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</RelativeLayout>

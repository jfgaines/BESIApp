<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jfgaines.besiapp.Reports"
    android:background="#E1BEE7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout24"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView12"
            android:src="@drawable/home"
            android:onClick="HomeonClick"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Home"
            android:id="@+id/textView36"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#010101" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="175dp"
                android:id="@+id/CaretakerBtn"
                android:layout_alignTop="@+id/gridLayout"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:src="@drawable/caregivericon"
                android:onClick="CareTakeronClick"
                android:clickable="true"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Caregiver"
                android:id="@+id/Caregiver"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:layout_centerHorizontal="true"
                android:textSize="36dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:id="@+id/PWDBtn"
                android:src="@drawable/pwd"
                android:onClick="PWDonClick"
                android:clickable="true"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Loved One"
                android:id="@+id/username"
                android:textStyle="bold"
                android:textSize="36dp"
                android:layout_alignTop="@+id/Caregiver"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
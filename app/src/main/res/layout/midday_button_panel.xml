<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1BEE7"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="#000"
        android:textSize="42dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_time02"
            android:textColor="#000"
            android:textSize="42dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/month_date02"
            android:textColor="#000"
            android:textSize="42dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <Button
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:id="@+id/Add_Midday_Activity_Button"
        android:background="@drawable/buttonanimate"
        android:text="Add New Activity"/>

    <Button
        android:id="@+id/Check_Tasks_Button02"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:textSize="28dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@drawable/buttonanimate"
        android:text="Check All Activities"/>

    <Button
        android:id="@+id/Done_Button02"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:textSize="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonanimate"
        android:textStyle="bold"
        android:text="Erase all checked activities"
        android:enabled="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="220dp"
        android:background="@drawable/buttonanimate"
        android:id="@+id/add_more_checks02"
        android:onClick="addchecklist2"
        android:src="@drawable/add_checklist"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequent Activities"
        android:layout_marginRight="140dp"
        android:textColor="#000"
        android:textSize="36dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/Back_To_DailyTasks_Button2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textSize="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/buttonanimate"
        android:textStyle="bold"
        android:text="Back"
        android:layout_marginBottom="70dp" />
</LinearLayout>
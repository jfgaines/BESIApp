<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E1BEE7">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/MainAppTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <Button
            android:id="@+id/RegisterBtn"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="Register"
            android:background="@drawable/signupbtnbkgnd"
            style="@style/BtnView"
            android:textSize="36sp"
            android:onClick="signUp" />

        <Button
            android:id="@+id/SigninBtn"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:text="Sign In"
            android:background="@drawable/loginbtnanimate"
            style="@style/BtnView"
            android:onClick="signIn"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BESI"
        android:id="@+id/MainAppTitle"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Behavioral and Environmental Sensing and Intervention"
        android:id="@+id/textView25"
        android:textColor="#ff000000"
        android:layout_below="@+id/MainAppTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

</RelativeLayout>

